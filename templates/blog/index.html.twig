{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
    {% for article in articles %}
    <article>
        <h2> {{ article.title}} </h2>
        <div class="metadata"> Ecrit le {{article.createdAt | date('d/m/Y') }} Ã  {{article.createdAt | date('H:i')}}
        </div>
        <div class="content">
            <img src="{{article.image}}" alt="">
            {{ article.content | raw}}
            </div>
    </article>
    <a href="{{ path('afficher_blog', {'id' : article.id}) }}" class="btn btn-primary">Lire la suite</a>
    {% endfor %}
{% endblock %}
